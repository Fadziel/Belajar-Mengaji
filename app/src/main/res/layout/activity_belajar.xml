<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_belajar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbaru"
    tools:context="com.racunduniaku.belajarmengaji.BelajarActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/menu_hijaiyah1"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/menu_hijaiyah"/>

            <ImageButton
                android:id="@+id/menu_harokat"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/menu_harokat"/>

            <ImageButton
                android:id="@+id/menu_tanwin"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/menu_tanwin"/>
        </LinearLayout>

    </HorizontalScrollView>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="help"
        android:background="@drawable/help"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonAbout" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="btnback"
        android:background="@drawable/back"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnback" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admob_banner_unit_id" />

</RelativeLayout>
